{
  "env": {
    "DJANGO_SETTINGS_MODULE": "APP_API.backend.settings"
  },
  "builds": [
    {
      "src": "APP_API/backend/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.11" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "APP_API/staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "APP_API/staticfiles_build/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "APP_API/backend/wsgi.py"
    }
  ]
}
